---
import '#styles/global.css'
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body 
		class="font-barlow-semi flex justify-center bg-Grey-100"
	>
		<main class="flex-[1_0_auto] flex items-center justify-center max-w-full">
			<slot />
		</main>

	</body>
</html>


